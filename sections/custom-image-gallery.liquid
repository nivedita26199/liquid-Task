<div class="custom-image-gallery__wrapper">
    <div class="custom-image-gallery__pre-heading">{{ section.settings.pre-heading }}</div>
    <div class="custom-image-gallery__heading">{{ section.settings.heading }}</div>
    <div class="custom-image-gallery__image">
        {% render 'responsive-image'
        
            desktopImage: section.settings.image,
            img-class: 'tw-w-full tw-max-h-[60rem]'
          %}
    </div>
</div>





{% schema %}
{
    "name": "Custom Image gallery",
    "tag": "section",
    "class": "custom-image-gallery",
    "settings": [
             {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
             },
             {
                "type": "text",
                "id": "pre-heading",
                "label": "Pre heading"
             },
             {
                "type": "text",
                "id": "heading",
                "label": "Heading",
             }
    ],
    "presets": [
        {
            "name": "Custom Image gallery"
        }
    ]
}
{% endschema %}